---
interface Props {
  logoSrc?: string;
  title?: string;
  subtitle?: string;
  ctaText?: string;
  ctaLink?: string;
}

const {
  logoSrc = '/asa-branca-informatica-v3-no-bg.webp',
  title = 'Seu computador rápido como um jato!',
  subtitle = 'Especialista em reviver máquinas lentas e antigas.',
  ctaText = 'Falar com o Técnico',
  ctaLink = 'https://wa.me/5571984843571',
} = Astro.props;
---

<section class="section-padding bg-ice-gray">
  <div class="container-custom">
    <div class="flex flex-col items-center text-center animate-fade-in">
      <!-- Logo -->
      <div class="mb-8 md:mb-10">
        <img 
          src={logoSrc} 
          alt="Asa Branca Informática - Logo" 
          width="280"
          height="280"
          class="w-48 h-48 md:w-64 md:h-64 lg:w-72 lg:h-72 object-contain drop-shadow-lg"
          loading="eager"
          decoding="async"
        />
      </div>
      
      <!-- Título Principal -->
      <h1 class="text-3xl md:text-4xl lg:text-display text-deep-black font-bold mb-4 md:mb-6 max-w-4xl">
        {title}
      </h1>
      
      <!-- Subtítulo -->
      <p class="text-lg md:text-xl text-soft-gray mb-8 md:mb-10 max-w-2xl">
        {subtitle}
      </p>
      
      <!-- CTA Button -->
      <a 
        href={ctaLink}
        target="_blank"
        rel="noopener noreferrer"
        class="btn-primary inline-flex items-center gap-2 text-lg"
      >
        <!-- WhatsApp Icon SVG inline -->
        <svg 
          xmlns="http://www.w3.org/2000/svg" 
          width="24" 
          height="24" 
          viewBox="0 0 24 24" 
          fill="none" 
          stroke="currentColor" 
          stroke-width="2" 
          stroke-linecap="round" 
          stroke-linejoin="round"
          aria-hidden="true"
        >
          <path d="M3 21l1.65-3.8a9 9 0 1 1 3.4 2.9L3 21"/>
          <path d="M9 10a.5.5 0 0 0 1 0V9a.5.5 0 0 0-1 0v1Zm0 0a5 5 0 0 0 5 5m0 0a.5.5 0 0 0 0-1h-1a.5.5 0 0 0 0 1h1Z"/>
        </svg>
        {ctaText}
      </a>
      
      <!-- Indicador de scroll sutil -->
      <div class="mt-12 md:mt-16 animate-bounce opacity-50">
        <svg 
          xmlns="http://www.w3.org/2000/svg" 
          width="24" 
          height="24" 
          viewBox="0 0 24 24" 
          fill="none" 
          stroke="currentColor" 
          stroke-width="2" 
          stroke-linecap="round" 
          stroke-linejoin="round"
          class="text-soft-gray"
          aria-hidden="true"
        >
          <path d="m6 9 6 6 6-6"/>
        </svg>
      </div>
    </div>
  </div>
</section>

